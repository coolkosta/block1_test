<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimbirSoftTestApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/turtle_green</item>
        <item name="colorPrimaryDark">@color/leaf</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">
            @drawable/ic_splashscreen_branding_centered
        </item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.SimbirSoftTestApp</item>
    </style>

</resources>
